@model List<MyAcademyCQRS.CQRSPattern.Results.CategoryResults.GetCategoryQueryResult>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-custom">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="admin-title mb-0" style="border:none; padding:0; margin:0;">
            <i class="fas fa-tags"></i> Kategori Listesi
        </h3>

        <div class="d-flex align-items-center gap-2">
            <span class="badge" style="background: var(--bagery-main-dark); font-size: 0.85em; padding: 10px 15px; border-radius: 30px; margin-right: 10px;">
                Toplam: @Model.Count
            </span>

            <a href="/Admin/Category/CreateCategory" class="btn btn-bagery-primary">
                <i class="fas fa-plus"></i> Yeni Kategori
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th style="padding-left: 20px; width: 100px;">#ID</th>
                    <th>Kategori Adı</th>
                    <th style="text-align: right; padding-right: 20px; width: 250px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="padding-left: 20px; font-weight: bold; color: #999;">#@item.CategoryId</td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div style="width: 40px; height: 40px; background: #f0fdfc; color: var(--bagery-main); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 15px; font-weight: bold; border: 1px solid var(--bagery-main);">
                                    @if (!string.IsNullOrEmpty(item.CategoryName))
                                    {
                                        @item.CategoryName.Substring(0, 1).ToUpper()
                                    }
                                </div>
                                <span style="font-weight: 600; font-size: 1.05em; color: var(--text-dark);">@item.CategoryName</span>
                            </div>
                        </td>
                        <td style="text-align: right; padding-right: 20px;">
                            <a href="/Admin/Category/UpdateCategory/@item.CategoryId" class="btn btn-bagery-mint btn-sm" style="margin-right: 5px;">
                                <i class="fas fa-edit"></i> Güncelle
                            </a>
                            <a href="/Admin/Category/DeleteCategory/@item.CategoryId" class="btn btn-action-delete btn-sm btn-delete">
                                <i class="fas fa-trash-alt"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
