@model MyAcademyCQRS.CQRSPattern.Commands.AboutCommands.CreateAboutCommand
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-custom">
    <h3 class="admin-title"><i class="fas fa-plus-circle"></i> Yeni Hakkımızda Yazısı</h3>
    <form method="post">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label>Başlık</label>
                <input type="text" asp-for="Title" class="form-control" placeholder="Örn: Hikayemiz" />
            </div>
            <div class="col-md-6 mb-3">
                <label>Alt Başlık</label>
                <input type="text" asp-for="SubTitle" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label>Ana Görsel URL</label>
                <input type="text" asp-for="ImageUrl" class="form-control" />
            </div>
            <div class="col-md-6 mb-3">
                <label>İmza Görsel URL</label>
                <input type="text" asp-for="SignatureUrl" class="form-control" />
            </div>
        </div>

        <div class="mb-3">
            <label>Açıklama (Metin)</label>
            <textarea asp-for="Description" class="form-control" rows="6"></textarea>
        </div>

        <button class="btn btn-bagery-primary"><i class="fas fa-save"></i> Kaydet</button>
    </form>
</div>
