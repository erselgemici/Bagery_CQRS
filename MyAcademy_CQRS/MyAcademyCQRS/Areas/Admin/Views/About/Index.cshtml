@model List<MyAcademyCQRS.CQRSPattern.Results.AboutResults.GetAboutQueryResult>
@{
    ViewData["Title"] = "Hakkımızda";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-custom">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="admin-title mb-0" style="border:none; padding:0; margin:0;">
            <i class="fas fa-info-circle"></i> Hakkımızda Yazıları
        </h3>

        <div class="d-flex align-items-center gap-2">
            <a href="/Admin/About/CreateAbout" class="btn btn-bagery-primary">
                <i class="fas fa-plus"></i> Yeni Yazı Ekle
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th style="padding-left: 20px;">Görsel</th>
                    <th>Başlık</th>
                    <th>Alt Başlık</th>
                    <th>İmza</th>
                    <th style="text-align: right; padding-right: 20px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="padding-left: 20px;">
                            <img src="@item.ImageUrl" style="width: 50px; height: 50px; border-radius: 10px; object-fit: cover; border: 2px solid #eee;" />
                        </td>
                        <td style="font-weight: 600;">@item.Title</td>
                        <td>@item.SubTitle</td>
                        <td>
                            <img src="@item.SignatureUrl" style="width: 60px; height: auto;" />
                        </td>
                        <td style="text-align: right; padding-right: 20px;">
                            <a href="/Admin/About/UpdateAbout/@item.AboutId" class="btn btn-bagery-mint btn-sm" style="margin-right: 5px;">
                                <i class="fas fa-edit"></i> Güncelle
                            </a>
                            <a href="/Admin/About/DeleteAbout/@item.AboutId" class="btn btn-action-delete btn-sm btn-delete">
                                <i class="fas fa-trash-alt"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
