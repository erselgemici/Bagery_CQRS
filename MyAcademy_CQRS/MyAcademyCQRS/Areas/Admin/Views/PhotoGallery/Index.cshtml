@model List<MyAcademyCQRS.CQRSPattern.Results.PhotoGalleryResults.GetPhotoGalleryQueryResult>
@{
    ViewData["Title"] = "Foto Galeri";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-custom">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="admin-title mb-0" style="border:none; padding:0; margin:0;">
            <i class="fas fa-images"></i> Foto Galeri
        </h3>
        <div class="d-flex align-items-center gap-2">
            <a href="/Admin/PhotoGallery/CreatePhotoGallery" class="btn btn-bagery-primary">
                <i class="fas fa-plus"></i> Yeni Fotoğraf
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th style="padding-left: 20px;">Görsel</th>
                    <th>Başlık</th>
                    <th>Filtre Etiketi</th>
                    <th style="text-align: right; padding-right: 20px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="padding-left: 20px;">
                            <img src="@item.ImageUrl" style="width: 80px; height: 60px; border-radius: 8px; object-fit: cover; border: 2px solid #eee;" />
                        </td>
                        <td style="font-weight: 600;">@item.Title</td>
                        <td>
                            <span class="badge" style="background: var(--bagery-salmon); color: #fff;">@item.FilterTag</span>
                        </td>
                        <td style="text-align: right; padding-right: 20px;">
                            <a href="/Admin/PhotoGallery/UpdatePhotoGallery/@item.PhotoGalleryId" class="btn btn-bagery-mint btn-sm" style="margin-right: 5px;">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="/Admin/PhotoGallery/DeletePhotoGallery/@item.PhotoGalleryId" class="btn btn-action-delete btn-sm btn-delete">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
