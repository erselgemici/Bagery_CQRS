@model MyAcademyCQRS.CQRSPattern.Results.PhotoGalleryResults.GetPhotoGalleryByIdQueryResult
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-custom">
    <h3 class="admin-title"><i class="fas fa-edit"></i> Fotoğrafı Güncelle</h3>
    <form method="post">
        <input type="hidden" asp-for="PhotoGalleryId" />

        <div class="row">
            <div class="col-md-6 mb-3">
                <label>Başlık</label>
                <input type="text" asp-for="Title" class="form-control" />
            </div>
            <div class="col-md-6 mb-3">
                <label>Filtre Etiketi</label>
                <input type="text" asp-for="FilterTag" class="form-control" />
            </div>
        </div>

        <div class="mb-3">
            <label>Görsel URL</label>
            <input type="text" asp-for="ImageUrl" class="form-control" />
        </div>

        <button class="btn btn-bagery-mint"><i class="fas fa-sync-alt"></i> Güncelle</button>
    </form>
</div>
