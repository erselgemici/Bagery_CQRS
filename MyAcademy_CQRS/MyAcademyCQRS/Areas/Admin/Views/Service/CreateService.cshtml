@model MyAcademyCQRS.CQRSPattern.Commands.ServiceCommands.CreateServiceCommand
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-custom">
    <h3 class="admin-title"><i class="fas fa-plus-circle"></i> Yeni Hizmet Ekle</h3>
    <form method="post">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label>Hizmet Başlığı</label>
                <input type="text" asp-for="Title" class="form-control" placeholder="Örn: Hızlı Teslimat" />
            </div>
            <div class="col-md-6 mb-3">
                <label>İkon Sınıfı (FontAwesome)</label>
                <input type="text" asp-for="IconClass" class="form-control" placeholder="Örn: fas fa-truck" />
            </div>
        </div>

        <div class="mb-3">
            <label>Açıklama</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        </div>

        <button class="btn btn-bagery-primary"><i class="fas fa-save"></i> Kaydet</button>
    </form>
</div>
