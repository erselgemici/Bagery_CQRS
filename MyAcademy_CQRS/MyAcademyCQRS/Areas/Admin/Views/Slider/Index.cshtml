@model List<MyAcademyCQRS.CQRSPattern.Results.SliderResults.GetSliderQueryResult>
@{
    ViewData["Title"] = "Slider Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-custom">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="admin-title mb-0" style="border:none; padding:0; margin:0;">
            <i class="fas fa-sliders-h"></i> Slider Listesi
        </h3>
        <div class="d-flex align-items-center gap-2">
            <a href="/Admin/Slider/CreateSlider" class="btn btn-bagery-primary">
                <i class="fas fa-plus"></i> Yeni Slayt
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th style="padding-left: 20px;">Görsel</th>
                    <th>Başlık</th>
                    <th>Açıklama</th>
                    <th>Buton Url</th>
                    <th style="text-align: right; padding-right: 20px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="padding-left: 20px;">
                            <img src="@item.ImageUrl" style="width: 100px; height: 50px; border-radius: 5px; object-fit: cover; border: 2px solid #eee;" />
                        </td>
                        <td style="font-weight: 600;">@item.Title</td>
                        <td>@item.Description</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ButtonUrl))
                            {
                                <a href="@item.ButtonUrl" target="_blank" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-link"></i> Link
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td style="text-align: right; padding-right: 20px;">
                            <a href="/Admin/Slider/UpdateSlider/@item.SliderId" class="btn btn-bagery-mint btn-sm" style="margin-right: 5px;">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="/Admin/Slider/DeleteSlider/@item.SliderId" class="btn btn-action-delete btn-sm btn-delete">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
