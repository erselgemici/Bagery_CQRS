@model MyAcademyCQRS.CQRSPattern.Results.SliderResults.GetSliderByIdQueryResult
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-custom">
    <h3 class="admin-title"><i class="fas fa-edit"></i> Slaytı Güncelle</h3>
    <form method="post">
        <input type="hidden" asp-for="SliderId" />

        <div class="row">
            <div class="col-md-6 mb-3">
                <label>Slayt Başlığı</label>
                <input type="text" asp-for="Title" class="form-control" />
            </div>
            <div class="col-md-6 mb-3">
                <label>Buton Yönlendirme Linki</label>
                <input type="text" asp-for="ButtonUrl" class="form-control" />
            </div>
        </div>

        <div class="mb-3">
            <label>Görsel URL</label>
            <input type="text" asp-for="ImageUrl" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Açıklama / Slogan</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <button class="btn btn-bagery-mint"><i class="fas fa-sync-alt"></i> Güncelle</button>
    </form>
</div>
