@model List<MyAcademyCQRS.CQRSPattern.Results.ContactInfoResults.GetContactInfoQueryResult>
@{
    ViewData["Title"] = "İletişim Bilgileri";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-custom">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="admin-title mb-0" style="border:none; padding:0; margin:0;">
            <i class="fas fa-map-marker-alt"></i> İletişim Bilgileri
        </h3>

        <div class="d-flex align-items-center gap-2">
            <a href="/Admin/ContactInfo/CreateContactInfo" class="btn btn-bagery-primary">
                <i class="fas fa-plus"></i> Yeni Ekle
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th style="padding-left: 20px;">Adres</th>
                    <th>Telefon</th>
                    <th>Email</th>
                    <th>Çalışma Saatleri</th>
                    <th style="text-align: right; padding-right: 20px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="padding-left: 20px; font-weight: 500;">@item.Address</td>
                        <td>@item.Phone</td>
                        <td>@item.Email</td>
                        <td><span class="badge bg-light text-dark border">@item.OpenHours</span></td>
                        <td style="text-align: right; padding-right: 20px;">
                            <a href="/Admin/ContactInfo/UpdateContactInfo/@item.ContactInfoId" class="btn btn-bagery-mint btn-sm" style="margin-right: 5px;">
                                <i class="fas fa-edit"></i> Güncelle
                            </a>
                            <a href="/Admin/ContactInfo/DeleteContactInfo/@item.ContactInfoId" class="btn btn-action-delete btn-sm btn-delete">
                                <i class="fas fa-trash-alt"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
