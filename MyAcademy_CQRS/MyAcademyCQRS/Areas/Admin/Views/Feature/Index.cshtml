@model List<MyAcademyCQRS.CQRSPattern.Results.FeatureResults.GetFeatureQueryResult>
@{
    ViewData["Title"] = "Öne Çıkanlar";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-custom">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="admin-title mb-0" style="border:none; padding:0; margin:0;">
            <i class="fas fa-star"></i> Öne Çıkan Özellikler
        </h3>
        <div class="d-flex align-items-center gap-2">
            <a href="/Admin/Feature/CreateFeature" class="btn btn-bagery-primary">
                <i class="fas fa-plus"></i> Yeni Özellik
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th style="padding-left: 20px;">Başlık</th>
                    <th>Açıklama</th>
                    <th>Sayaç/Değer</th>
                    <th style="text-align: right; padding-right: 20px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="padding-left: 20px; font-weight: 600;">@item.Title</td>
                        <td>@item.Description</td>
                        <td><span class="badge" style="background: var(--bagery-main); color: #fff;">@item.Counter</span></td>
                        <td style="text-align: right; padding-right: 20px;">
                            <a href="/Admin/Feature/UpdateFeature/@item.FeatureId" class="btn btn-bagery-mint btn-sm" style="margin-right: 5px;">
                                <i class="fas fa-edit"></i> Güncelle
                            </a>
                            <a href="/Admin/Feature/DeleteFeature/@item.FeatureId" class="btn btn-action-delete btn-sm btn-delete">
                                <i class="fas fa-trash-alt"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
