@model MyAcademyCQRS.CQRSPattern.Results.TestimonialResults.GetTestimonialByIdQueryResult
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-custom">
    <h3 class="admin-title"><i class="fas fa-edit"></i> Referans Güncelle</h3>
    <form method="post">
        <input type="hidden" asp-for="TestimonialId" />

        <div class="row">
            <div class="col-md-6 mb-3">
                <label>Ad Soyad</label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="col-md-6 mb-3">
                <label>Ünvan</label>
                <input type="text" asp-for="Title" class="form-control" />
            </div>
        </div>

        <div class="mb-3">
            <label>Görsel URL</label>
            <input type="text" asp-for="ImageUrl" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Yorum</label>
            <textarea asp-for="Comment" class="form-control" rows="4"></textarea>
        </div>

        <button class="btn btn-bagery-mint"><i class="fas fa-sync-alt"></i> Güncelle</button>
    </form>
</div>
