@model MyAcademyCQRS.CQRSPattern.Commands.TestimonialCommands.CreateTestimonialCommand
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-custom">
    <h3 class="admin-title"><i class="fas fa-plus-circle"></i> Yeni Referans Ekle</h3>
    <form method="post">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label>Ad Soyad</label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="col-md-6 mb-3">
                <label>Ünvan (Örn: Müşteri, Öğrenci)</label>
                <input type="text" asp-for="Title" class="form-control" />
            </div>
        </div>

        <div class="mb-3">
            <label>Görsel URL</label>
            <input type="text" asp-for="ImageUrl" class="form-control" placeholder="https://..." />
        </div>

        <div class="mb-3">
            <label>Yorum</label>
            <textarea asp-for="Comment" class="form-control" rows="4"></textarea>
        </div>

        <button class="btn btn-bagery-primary"><i class="fas fa-save"></i> Kaydet</button>
    </form>
</div>
