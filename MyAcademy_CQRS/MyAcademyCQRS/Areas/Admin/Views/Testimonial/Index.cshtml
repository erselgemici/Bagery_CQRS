@model List<MyAcademyCQRS.CQRSPattern.Results.TestimonialResults.GetTestimonialQueryResult>
@{
    ViewData["Title"] = "Referanslar";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-custom">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="admin-title mb-0" style="border:none; padding:0; margin:0;">
            <i class="fas fa-comments"></i> Referans Listesi
        </h3>
        <div class="d-flex align-items-center gap-2">
            <a href="/Admin/Testimonial/CreateTestimonial" class="btn btn-bagery-primary">
                <i class="fas fa-plus"></i> Yeni Referans
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th style="padding-left: 20px;">Görsel</th>
                    <th>Ad Soyad</th>
                    <th>Ünvan</th>
                    <th>Yorum</th>
                    <th style="text-align: right; padding-right: 20px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="padding-left: 20px;">
                            <img src="@item.ImageUrl" style="width: 50px; height: 50px; border-radius: 50%; object-fit: cover; border: 2px solid #eee;" />
                        </td>
                        <td style="font-weight: 600;">@item.Name</td>
                        <td><span class="badge bg-light text-dark border">@item.Title</span></td>
                        <td style="font-style: italic; color: #666; max-width: 300px;">"@item.Comment"</td>
                        <td style="text-align: right; padding-right: 20px;">
                            <a href="/Admin/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-bagery-mint btn-sm" style="margin-right: 5px;">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="/Admin/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-action-delete btn-sm btn-delete">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
