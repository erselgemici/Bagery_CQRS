@model List<MyAcademyCQRS.Areas.Admin.Models.AssignRoleViewModel>
@{
    ViewData["Title"] = "Rol Ata";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-custom">
    <h3 class="admin-title"><i class="fas fa-tasks"></i> Rol Atama İşlemi</h3>

    <form method="post">
        <table class="table table-bordered">
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        <div class="form-check">
                            <input type="hidden" asp-for="@Model[i].RoleId" />
                            <input type="hidden" asp-for="@Model[i].RoleName" />
                            <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input" />
                            <label class="form-check-label" style="font-weight: 500;">@Model[i].RoleName</label>
                        </div>
                    </td>
                </tr>
            }
        </table>
        <button class="btn btn-modern btn-modern-primary">Değişiklikleri Kaydet</button>
    </form>
</div>
