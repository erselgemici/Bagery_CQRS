@model List<MyAcademyCQRS.Entities.AppRole>
@{
    ViewData["Title"] = "Rol Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-custom">
    <div class="admin-header-container">
        <h3 class="admin-title"><i class="fas fa-user-shield"></i> Rol Listesi</h3>
        <a href="/Admin/Role/CreateRole" class="btn btn-modern btn-modern-primary">
            <i class="fas fa-plus"></i> Yeni Rol Ekle
        </a>
    </div>

    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th>#</th>
                <th>Rol Adı</th>
                <th style="text-align:center;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td><span class="badge bg-secondary">@item.Name</span></td>
                    <td style="text-align:center;">
                        <a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-action btn-action-delete btn-delete">
                            <i class="fas fa-trash-alt"></i> Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
