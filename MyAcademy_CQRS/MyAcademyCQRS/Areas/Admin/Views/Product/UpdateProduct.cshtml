@model MyAcademyCQRS.CQRSPattern.Results.ProductResults.GetProductByIdQueryResult
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-custom">
    <h3 class="admin-title"><i class="fas fa-edit"></i> Ürün Güncelle</h3>
    <form method="post">
        <input type="hidden" asp-for="ProductId" />

        <div class="row">
            <div class="col-md-6 mb-3">
                <label>Ürün Adı</label>
                <input type="text" asp-for="ProductName" class="form-control" />
            </div>
            <div class="col-md-3 mb-3">
                <label>Fiyat (₺)</label>
                <input type="number" step="0.01" asp-for="Price" class="form-control" />
            </div>
            <div class="col-md-3 mb-3">
                <label>Puan (1-5)</label>
                <input type="number" min="1" max="5" asp-for="Rating" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label>Kategori</label>
                @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.CategoryList, new { @class = "form-control" })
            </div>
            <div class="col-md-6 mb-3">
                <label>Görsel URL</label>
                <input type="text" asp-for="ImageUrl" class="form-control" />
            </div>
        </div>

        <div class="mb-3">
            <label>Açıklama</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        </div>

        <button class="btn btn-bagery-mint"><i class="fas fa-sync-alt"></i> Güncelle</button>
    </form>
</div>
