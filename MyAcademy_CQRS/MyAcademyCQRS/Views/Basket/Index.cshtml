@using MyAcademyCQRS.CQRSPattern.Results.BasketResults
@model List<GetBasketQueryResult>

@{
    ViewData["Title"] = "Sepetim";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
    decimal cartTotal = 0;
}

<section class="page-title centred" style="background-image: url(/assets/images/background/page-title.jpg);">
    <div class="auto-container">
        <div class="content-box">
            <div class="title">
                <h1>Sepetim</h1>
            </div>
            <ul class="bread-crumb clearfix">
                <li><a href="/">Anasayfa</a></li>
                <li>Sepetim</li>
            </ul>
        </div>
    </div>
</section>

<section class="cart-section">
    <div class="auto-container">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 table-column">
                <div class="table-outer">
                    <table class="cart-table">
                        <thead class="cart-header">
                            <tr>
                                <th>Ürün Resmi</th>
                                <th>Ürün Adı</th>
                                <th>Fiyat</th>
                                <th>Adet</th>
                                <th>Toplam</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Count > 0)
                            {
                                foreach (var item in Model)
                                {
                                    cartTotal += item.TotalRowPrice;

                                    <tr>
                                        <td class="prod-column">
                                            <div class="column-box">
                                                <figure class="prod-thumb">
                                                    <img src="@item.ProductImage" alt="" style="width:80px; height:80px; object-fit:cover;">
                                                </figure>
                                            </div>
                                        </td>
                                        <td>
                                            <h4 class="prod-title">@item.ProductName</h4>
                                        </td>
                                        <td class="price">@item.Price ₺</td>
                                        <td class="qty">
                                            <div class="item-quantity" style="display: flex; align-items: center; justify-content: center; gap: 10px;">
                                                <a href="/Basket/DecreaseBasketItem/@item.BasketItemId" class="btn btn-sm btn-light border" style="width: 30px; height: 30px; line-height: 20px;">-</a>
                                                <input class="quantity-spinner" type="text" value="@item.Quantity" name="quantity" readonly style="width: 40px; text-align: center; border: none;">
                                                <a href="/Basket/IncreaseBasketItem/@item.BasketItemId" class="btn btn-sm btn-light border" style="width: 30px; height: 30px; line-height: 20px;">+</a>
                                            </div>
                                        </td>
                                        <td class="sub-total">@item.TotalRowPrice ₺</td>
                                        <td class="remove" style="text-align: center; vertical-align: middle;">
                                            <a href="/Basket/DeleteBasketItem/@item.BasketItemId" class="remove-btn" title="Ürünü Sil">
                                                <i class="fas fa-trash-alt" style="color: #ff4d4d; font-size: 18px;"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center">Sepetinizde ürün bulunmamaktadır.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="cart-total">
            <div class="row clearfix">
                <div class="col-xl-5 col-lg-12 col-md-12 offset-xl-7 cart-column">
                    <div class="total-cart-box clearfix">
                        <h4>Sepet Toplamı</h4>
                        <ul class="list clearfix">
                            <li>Ara Toplam:<span>@cartTotal ₺</span></li>
                            <li>Kargo:<span>0 ₺</span></li>
                            <li><h5>Genel Toplam:<span>@cartTotal ₺</span></h5></li>
                        </ul>

                        @if (Model != null && Model.Count > 0)
                        {
                            <a href="/Basket/CompleteOrder" class="theme-btn-one">Siparişi Tamamla</a>
                        }
                        else
                        {
                            <a href="#" class="theme-btn-one disabled" style="opacity:0.5; cursor:not-allowed;">Sepet Boş</a>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


